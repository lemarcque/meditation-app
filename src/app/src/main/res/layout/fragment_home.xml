<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingHorizontal="30dp"
    android:paddingTop="30dp"
    tools:context=".home.HomeFragment">

    <!-- Welcome message (Header) -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="0dp"
        android:text="Hi Sandra ðŸ‘‹"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>
    <!-- Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Question message -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="30dp"
            android:paddingHorizontal="40dp"
            android:text="What would you like to focus on ?"
            android:textAlignment="center"
            android:textSize="32sp"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif-light" />

        <!-- Grid Button -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="2"
            android:columnCount="2"
            android:alignmentMode="alignBounds">

            <!-- Motivation -->
            <io.capsulo.meditation.home.ModeButton
                android:layout_height="180dp"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                app:srcImage="@drawable/motivation"
                app:text="Motivation"/>

            <!-- Relax -->
            <io.capsulo.meditation.home.ModeButton
                android:layout_height="180dp"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                app:srcImage="@drawable/relax"
                app:text="Relax"/>

            <!-- Anxiety -->
            <io.capsulo.meditation.home.ModeButton
                android:layout_height="180dp"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                app:srcImage="@drawable/anxiety"
                app:text="Anxiety"/>

            <!-- Concentration -->
            <io.capsulo.meditation.home.ModeButton
                android:layout_height="180dp"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                app:srcImage="@drawable/concentration"
                app:text="Concentration"/>
        </GridLayout>

        <!-- Text : Advice -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="40dp"
            android:textAlignment="center"
            android:text="Take a deep breathe and clear your mind"
            android:textColor="@android:color/black"/>

        <!-- Button : Start -->
        <Button
            android:background="@drawable/bkg_btn_rounded"
            android:backgroundTint="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Start"
            android:textColor="@android:color/white"
            android:paddingHorizontal="40dp"/>

    </LinearLayout>


</LinearLayout>